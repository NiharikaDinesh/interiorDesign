    <script type="text/javascript">
    function choose(){
    var item=document.getElementById("design")
    if(item.value=="bedroom" ||"bedrooms"){
      window.open("portfolio")
    }
  else  if(item.value=="kitchen"){
      window.open("portfolio")
    }
  else  if(item.value=="exteriors" || "exterior"){
      window.open("exteriors")
    }
  else  if(item.value=="livingroom"){
      window.open("livingroom")
    }
  else  if(item.value=="bathrooms" || "bathroom"){
      window.open("bathrooms")
    }
  else  if(item.value=="additionals"){
      window.open("additionals")
    }
    else window.open("portfolio")
    }

    </script>




