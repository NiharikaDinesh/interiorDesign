<%- include('partials/header'); %>

  <link rel="stylesheet" href="/css/sample.css">

    <script src="https://kit.fontawesome.com/d7d7ee6600.js" crossorigin="anonymous"></script>


<div class="contact">
         <div class="row">
             <div class="column">
                 <img src="../images/contact3.jpg" alt="contact" style="width:40vw;height:100vh">
             </div>

              <div class="column" >
                  <h1 style="font-size:40px;color:black;font-family:sans-serif;padding-left:20%;">Get In Touch</h1>
                  <div class="row">
                      <div class="column">
                          <h5>Address</h5>
                          <p>D.No 9-2-11<br>ABC Street<br>Mumbai 400213</p>
                      </div>
                      <div class="column">
                          <h5>Buisiness Hours</h5>
                          <p>Monday to Friday : 10am to 6pm<br>
                              Saturday : 10am to 2pm</p>
                      </div>
                  </div>
                  <div class="row">
                      <div class="column">
                          <h5>Phone Numbers</h5>
                          <p>+91 9632587410<br>+91 1236547890<br>+91 7896321450</p>
                      </div>
                      <div class="column">
                          <h5>Email</h5>
                          <p>interiordesigners@gmail.com</p>
                      </div>

                  </div>
                  <div class="row">
                <form class="form-group" action="/contact" method="post">
                      <div>
                          <label for="name">Name:</label>
                          <br>
                          <br>
                          <input class="form-control" type="text" id="name" name="Name" required="required"/>
                          <br>

                      </div>

                      <div>
                          <label for="email">Email:</label>
                          <br>
                          <br>
                          <input class="form-control" type="email" id="email"  required="required" name="postTitle"/>
                          <br>

                      </div>


                      <div>

                          <label for="message">Tell us about your requirement:</label><br>
                          <br>
                          <br>
                          <textarea class="form-control" id="message" name="postBody" required="required"></textarea>
                          <br>
                      </div>
                      <div>

                          <button  style="color:white;" type="submit" onclick="myScript()" >Send message</button>
                      </div>


                  </form>
                  </div>

                  <div class="row">

                          <h5>Social Media</h5>

                          <div class="wrapper">
                              <div class="button">
                                  <div class="icon">
                                      <i class="fa fa-facebook-f"></i>
                                  </div>
                                  <span>Facebook</span>
                              </div>
                              <div class="button">
                                  <div class="icon">
                                      <i class="fa fa-twitter"></i></div>
                                  <span>Twitter</span>
                              </div>
                              <div class="button">
                                  <div class="icon">
                                      <i class="fa fa-instagram"></i></div>
                                  <span>Instagram</span>
                              </div>

                          </div>


                  </div>





              </div>

            </div>


          </div>
          <script type="text/javascript">
            function myScript(){
              alert("Your response has been sent to us!")
            }
          </script>


    </body>
